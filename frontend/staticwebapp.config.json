{
  "routes": [
    { "route": "/", "redirect": "/.auth/login/aad?post_login_redirect_uri=/portal", "statusCode": 302 },
    { "route": "/portal/*", "allowedRoles": ["authenticated"] },
    { "route": "/.auth/*", "allowedRoles": ["anonymous","authenticated"] }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/static/*", "/.auth/*"]
  },
  "responseOverrides": {
    "401": { "redirect": "/.auth/login/aad?post_login_redirect_uri=/portal", "statusCode": 302 },
    "404": { "rewrite": "/index.html", "statusCode": 200 }
  }
}
