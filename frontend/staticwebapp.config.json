{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/static/*", "/.auth/*"]
  },
  "routes": [
    {
      "route": "/api/*",
      "rewrite": "https://backend-grupobia.azurewebsites.net/api/*",
      "allowedRoles": ["anonymous"],
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    },
    {
      "route": "/portal/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/portal",
      "statusCode": 302
    },
    "404": { "rewrite": "/index.html", "statusCode": 200 }
  }
}
